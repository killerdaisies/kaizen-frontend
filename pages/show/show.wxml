<!--show.wxml-->

<view class="top-section">

  <view class="background" style='background-image:  linear-gradient(to bottom,  rgba(0,0,0,0.2), rgba(0,0,0,0.5)), url(https://cdn.cnn.com/cnnnext/dam/assets/180806212336-03-ohio-troy-balderson-exlarge-tease.jpg);'/>
 
<view class="image-container">
 <image class="backspace" src="../images/back-arrow.png"></image>
  <view class="avatar-details">
    <view class="avatar-name">
      {{wechat_name}} <text>Angel Wu</text>
    </view>
    <view class="avatar-status">
      <text>Host</text>
    </view>
  </view>
  <image class="avatar" src="{{avatar_url}}"></image>
</view>
</view>
<view class="page-container">
  <view class="card-title">
    <view class="name">
        {{description}} 
        <!-- <text>Demo-Day</text> -->
    </view>

    <view class="date">
        {{start_time}}
        <!-- <text>07/08/2018 Tuesday 2:30-5:30pm</text> -->
    </view>

    <view class="address">
        {{address}}
        <!-- <text>WeWork Nanjing West Road 3F</text> -->
    </view>
    <view class="card-mainInfo">

      <view class="time">
      <text>3:30</text>
        {{start_time}} - {{end_time}}
        <text>4:30</text>
      </view>

    </view>
  </view>
</view>


  <view class ="list">
    <button class= "list-button" bindtap="viewList">
      <image class= "avatar-mini" src="../images/camera.png"></image>
    </button>
  </view>

  <view class ="map">
   <map
      id="myMap"
      style="width: 100%; height: 300px;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      covers="{{covers}}"
      show-location
    ></map>
  </view>

    <!-- <button  style="margin-top:55rpx; padding-bottom:1rpx; width:95%" type="warning" form-type="submit" loading="{{loading}}" bindtap="onSendInvite">
      Send Invite
    </button> -->

  <view class ="invite-button">
    <view bindtap="onShareAppMessage">
      <button class="share-btn" open-type="share" type="warning">
        Send Invite
      </button>
    </view>
  </view>

