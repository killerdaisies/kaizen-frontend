/* pages/add/add.wxss */
.input-height {
  height: 10em;
  color: black;
  position: relative;
}

.input-size{
  color: black;
}

.form{
  background-color: #FCFCFC;
  position: relative;

}

.textarea {
  padding: 10rpx 0;
  font-size: 50rpx;
  color: black;
  width: 100%;
}

.add-avatar {
  background-color: #308E8B;
  opacity: 0.8;
  height: 190px;
}

.add-button {
  background-color: white;
  color: gray;
  padding: 5px 15px;
  border: solid 1px;
  border-radius: 50px;
  opacity: .8;
  top: 40%;
  position: relative;
  width: 50%;
}

.add-button :hover {
  opacity: .8;
  background-color: grey;
}

.camera {
  width: 20px;
  height: 20px;
  top: 3px;
  left: 5px;
  position: relative;
}

.button{
  margin-top: 100px;
  margin-bottom:50px;
}

.section{
  padding: 20rpx 20rpx;
  background-color: #fff;
  color: grey;
  right: 2px;
  width: 100% ;
  position: relative;
  opacity: .7;
  height: 30px;
  border-bottom: 1px solid rgba(0,0,0,0.16);
}

.title-location{
  margin-bottom: 30rpx;
  margin-top: 20rpx;
  border-top: 1px solid rgba(0,0,0,0.14);
}

.start-end-type{
  border-top: 1px solid rgba(0,0,0,0.14);
}