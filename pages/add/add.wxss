/* pages/add/add.wxss */
.input-height {
  height: 10em;
  color: grey;
  position: relative;
}

.input-size{
  color: black;
}

.textarea {
  padding: 10rpx 0;
  font-size: 35rpx;
  color: black;
  width: 100%;
}

.add-avatar {
  background-color: lightgrey;
  opacity: 0.8;
  height: 300px;
}

.add-button {
  background-color: white;
  color: gray;
  padding: 5px 15px;
  border: solid 1px;
  border-radius: 50px;
  opacity: .8;
  top: 40%;
  position: relative;
  width: 50%;
}

.add-button :hover {
  opacity: .8;
  background-color: grey;
}

.camera {
  width: 20px;
  height: 20px;
  top: 3px;
  left: 5px;
  position: relative;
}

.button{
  margin-top: 100px;
  margin-bottom:50px;
}

.section{
  padding: 15rpx 15rpx;
  background-color: #fff;
  color: grey;
  border: 1px solid #E5E5E5;
  width: 90% ;
  left: 10px;
  right: 10px;
  position: relative;
  opacity: .7;
  height: 30px;
  border-radius: 5px;

}
