<!--pages/add/add.wxml-->
<view style="margin-bottom:50px"type="primary" loading="{{loading}}">
  <view class="add-avatar">
    <button class= "add-button" bindtap="pickImage"> Add a photo
      <image class= "camera" src="../images/camera.png"></image>
    </button>
  </view>
</view>

<template name="form">
  <form bindsubmit="bindSubmit">
      <view class="section">
      <textarea value="{{description}}" style="input-size" class="input-height" name="description"  maxlength="-1" auto-height placeholder='Title'/>
      </view>
      <view class="section">
      <textarea value="{{address}}" style="input-size" class="input-height" name="address" maxlength="-1" auto-height placeholder='Location'/>
      </view>

    <view class="section">
      <picker mode="date" value="{{start_time}}" start="2018-09-01" end="2030-09-01" bindchange="bindDateChange1">
        <view class="picker">
          Start Time   {{startDate}}
        </view>
      </picker>
    </view>

    <view class="section">
      <picker mode="date" value="{{end_time}}" start="2018-09-01" end="2030-09-01" bindchange="bindDateChange2">
        <view class="picker">
          End Time   {{endDate}}
        </view>
      </picker>
    </view>

    <view class="section">
      <textarea value="{{capacity}}" style="input-size" class="input-height" name="capacity" maxlength="-1" auto-height placeholder="Capacity"/>
    </view>

    <button  style="margin-top:55rpx; padding-bottom:1rpx; width:95%" type="warning" form-type="submit" loading="{{loading}}" bindtap="saveTap">Save</button>
  </form>
</template>
<template is="form"/>
