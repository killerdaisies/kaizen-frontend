<!--show.wxml-->
<view class="top-section">

  <!-- <view class="background" style='background-image:  linear-gradient(to bottom,  rgba(0,0,0,0.2), rgba(0,0,0,0.5)), url(https://cdn.cnn.com/cnnnext/dam/assets/180806212336-03-ohio-troy-balderson-exlarge-tease.jpg);'/> -->

  <view class="image-container">
    <view class="avatar-details">
      <view class="avatar-name">
        {{user.wechat_name}}
      </view>
      <view class="avatar-status">
        <text>Host</text>
      </view>
    </view>
    <image class="avatar" src="{{user.avatar_url}}"></image>
  </view>
</view>
  <button class= "edit-button" bindtap="editEvent" data-id="{{id}}">
      Edit
  </button>

  <button class= "delete-button" bindtap="deleteEvent" data-id="{{id}}">
    Deleter the destroyer
  </button>

<view class="page-container">
  <view class="card-title">
    <view class="name">
        {{description}}
    </view>

    <view class="date">
    <image class="icon" src="../images/time.png"></image>
        {{start}}
        <!-- <text>07/08/2018 Tuesday 2:30-5:30pm</text> -->
    </view>

    <view class="address">
    <image class="icon" src="../images/location.png"></image>
        {{address}}
        <!-- <text>WeWork Nanjing West Road 3F </text> -->
    </view>
    <view class="time">
    <image class="reminder" src="../images/reminder.png"></image>
      <!-- <text>3:30 - 4:30</text> -->
         {{end}}
    </view>
  </view>
</view>


  <view class ="list">
    <button class= "list-button" bindtap="viewParticipants">
      <view class='avatar-mini' wx:for-item="avatar" wx:key="avatar.id"     data-item= "{{user.avatar_url}}"style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('{{user.avatar_url}}')"></view>
      <!-- <image class= "avatar-mini" src="../images/camera.png"></image> -->
    </button>
  </view>

  <view class ="map">
   <map
      id="myMap"
      style="width: 100%; height: 400rpx;"
      latitude= "{{latitude}}"
      longitude= "{{longitude}}"
      markers="{{markers}}"
      covers="{{covers}}"
      show-location>
    </map>
  </view>

  <view class ="invite-button">
    <view>
      <button class="share-btn" open-type="share" type="warning">
        Send Invite
      </button>
    </view>
  </view>

